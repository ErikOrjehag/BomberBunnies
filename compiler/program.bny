INIT:	

	load	gr12 4
	/* load	gr2 4
	tpoint	gr1
	twrite	gr2 */

/* -------- START OF MAIN -------- */

MAIN:

	jump CONTROL
	CONTROL_R:

	jump BUTTON
	BUTTON_R: 

	jump TICKBOMBS
	TICKBOMBS_R:

	jump MAIN

/* -------- END OF MAIN -------- */

/* -------- START OF TICKBOMBS -------- */

TICKBOMBS:
	/* Checks if bomb is placed */
	load	gr0 P1BOMBACTIVE
	sub	gr0 1
	bne	TICK2

	/* Decrease counter with 1 */
	load	gr0 P1BOMBTIME
	sub	gr0 1
	store	P1BOMBTIME gr0

	load	gr0 0
	sub	gr0 P1BOMBTIME
	beq	EXPLODE1
	
	jump	TICK2

EXPLODE1:
	/* Decrease bomb counter for player 1 */
	load	gr0 BOMBS1
	sub	gr0 1
	store	BOMBS1 gr0

	load	gr2 P1BOMBPOS
	load 	gr3 EXPLOSION
	tpoint	gr2
	twrite	gr3

	/* Explosion to the right */
	/* Checks space for explosion */
	add	gr2 1
	tpoint	gr2
	tread	gr0
	sub 	gr0 WALL
	beq 	P1LEFT

	/* Places explosion */
	twrite	gr3

	/* Checks space for next explosion */
	add	gr2 1
	tpoint	gr2
	tread	gr0
	sub 	gr0 WALL
	beq 	P1LEFT

	/* Places explosion */
	twrite	gr3

	

P1LEFT:
	/* Explosion to the left */
	load	gr2 P1BOMBPOS

	/* Checks space for explosion */
	sub	gr2 1
	tpoint	gr2
	tread	gr0
	sub 	gr0 WALL
	beq 	P1DOWN

	/* Places explosion */
	twrite	gr3

	/* Checks space for next explosion */
	sub	gr2 1
	tpoint	gr2
	tread	gr0
	sub 	gr0 WALL
	beq 	P1DOWN

	/* Places explosion */
	twrite	gr3
	
P1DOWN:
 	/* Explosion down */
	load	gr2 P1BOMBPOS

	/* Checks space for explosion */
	add	gr2 15
	tpoint	gr2
	tread	gr0
	sub 	gr0 WALL
	beq 	P1UP

	/* Places explosion */
	twrite	gr3

	/* Checks space for next explosion */
	add	gr2 15
	tpoint	gr2
	tread	gr0
	sub 	gr0 WALL
	beq 	P1UP

	/* Places explosion */
	twrite	gr3

P1UP:
	/* Explosion up */
	load	gr2 P1BOMBPOS
	
	/* Checks space for explosion */
	sub	gr2 15
	tpoint	gr2
	tread	gr0
	sub 	gr0 WALL
	beq 	TICK2

	/* Places explosion */
	twrite	gr3

	/* Checks space for next explosion */
	sub	gr2 15
	tpoint	gr2
	tread	gr0
	sub 	gr0 WALL
	beq 	TICK2

	/* Places explosion */
	twrite	gr3

TICK2:
	


	jump	TICKBOMBS_R

/* -------- END OF TICKBOMBS -------- */

/* -------- START OF BUTTON -------- */

BUTTON:
	btn1	BTN1
	BTN1_R:
	
	btn2	BTN2
	BTN2_R:
	
	jump	BUTTON_R

BTN1:
	/* Checks if player can place more bombs */
	load	gr0 BOMBS1
	sub	gr0 MAXBOMBS
	beq	BTN1_R

	/* Checks if there's already a egg there */
	store	XPOS1 gr12
	store	YPOS1 gr13
	load	gr0 YPOS1
	mul	gr0 15
	add	gr0 XPOS1
	tpoint	gr0
	tread	gr1
	sub	gr1 EGG
	beq	BTN2_R

	/* Places egg */
	store 	XPOS1 gr12
	store 	YPOS1 gr13
	load 	gr3 YPOS1
	load	gr2 EGG
	mul 	gr3 15
	add	gr3 XPOS1
	tpoint 	gr3
	twrite 	gr2
	load	gr0 1
	store	P1BOMBACTIVE gr0

	/* Loads bom position and bomb timer */
	store	P1BOMBPOS gr3
	load	gr0 16
	store	P1BOMBTIME gr0

	/* Increases bomb counter */
	load	gr0 BOMBS1
	add	gr0 1
	store 	BOMBS1 gr0
	jump	BTN1_R

BTN2:
	load	gr0 BOMBS2
	sub	gr0 MAXBOMBS
	beq	BTN2_R

	store	XPOS2 gr14
	store	YPOS2 gr15
	load	gr0 YPOS2
	mul	gr0 15
	add	gr0 XPOS2
	tpoint	gr0
	tread	gr1
	sub	gr1 EGG
	beq	BTN2_R

	store 	XPOS2 gr14
	store	YPOS2 gr15
	load 	gr3 YPOS2
	load	gr2 EGG
	mul 	gr3 15
	add	gr3 XPOS2
	tpoint 	gr3
	twrite 	gr2

	load	gr0 BOMBS2
	add	gr0 1
	store 	BOMBS2 gr0
	jump	BTN2_R

/* LABELS */
TMP1:
	0


/* -------- END OF BUTTON -------- */


